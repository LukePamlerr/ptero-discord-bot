# ===========================================
# Pterodactyl Discord Bot Configuration
# ===========================================

# Discord Bot Configuration
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_GUILD_ID=your_discord_guild_id_here

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/ptero_bot

# Pterodactyl Configuration (Optional - users can set their own)
PTERODACTYL_PANEL_URL=your_ptero_panel_url_here
PTERODACTYL_API_KEY=your_ptero_api_key_here

# Bot Configuration
BOT_PREFIX=!
LOG_LEVEL=INFO
MAX_SERVERS_PER_USER=10

# Web Interface Configuration
ENABLE_WEB_INTERFACE=true
WEB_PORT=8080

# Monitoring Configuration
ENABLE_MONITORING=true
AUTO_BACKUP_INTERVAL=24
ALERT_THRESHOLD_CPU=80
ALERT_THRESHOLD_MEMORY=85

# Security Configuration
ENCRYPTION_KEY=your_encryption_key_here
API_TIMEOUT=30
MAX_RETRIES=3

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379/0

# Notification Configuration
DISCORD_WEBHOOK_URL=your_webhook_url_here
ENABLE_EMAIL_NOTIFICATIONS=false
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your_email@example.com
SMTP_PASSWORD=your_email_password

# Development Configuration
DEBUG=false
TEST_MODE=false